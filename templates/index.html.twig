{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid" id="home">
        <div class="page-title">
        </div>
        <section id="presentation">
            <div class="info">
                <h1 class="display-2">{{ profil.firstName }} {{ profil.lastName }}</h1>
                <p class="lead display-3">{{ profil.description1 }}
                <hr class="my-4">
                <p class="lead display-4">{{ profil.description2 }}</p>
            </div>
            <div class="picture">
                {% if profil.picture %}
                    <img src="{{ vich_uploader_asset(profil, 'pictureFile') | imagine_filter('medium') }}">
                {% endif %}
            </div>


        </section>

        <section id="projet" style="height: 800px">
            <h1>Mes projets</h1>
        </section>

        <section id="mon-propos">
            <h1>A propos de moi</h1>
        </section>

        <section id="contact">
            <h1> Me contacter</h1>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success d-flex justify-content-center">
                    {{ message }}
                </div>
            {% endfor %}
            <div id="contactForm" class="mt-4 container-fluid" style="width: 60%">
                {{ form_start(form) }}

                    <div class="col">{{ form_row(form.firstName) }}</div>
                    <div class="col">{{ form_row(form.lastName) }}</div>


                    <div class="col">{{ form_row(form.email) }}</div>
                    <div class="col">{{ form_row(form.message) }}</div>

                <div class="form-group">
                    <button class="btn btn-primary">Envoyer</button>
                </div>
                {{ form_end(form) }}
            </div>
        </section>
    </div>


{% endblock %}
